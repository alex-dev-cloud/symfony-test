{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1 class="text-center">Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ event.user.login }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-secondary mr-2" href="{{ path('event_index') }}">back to list</a>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a class="btn btn-warning mr-2" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
            {{ include('event/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
